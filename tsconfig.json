{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
